<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pang.mall.mapper.SellerMapper">
    <resultMap id="BaseResultMap" type="com.pang.mall.entity.Seller">
        <id column="seller_id" property="sellerId" jdbcType="INTEGER"/>
        <result column="seller_name" property="sellerName" jdbcType="VARCHAR"/>
    </resultMap>
    <!--  添加新的卖家  -->
    <insert id="addSeller" parameterType="com.pang.mall.entity.Seller">
        insert into t_seller(seller_name)
        values (#{sellerName})
    </insert>
    <!--  根据id查找卖家  -->
    <select id="selectSellerById" resultMap="BaseResultMap">
        select
            seller_id,
            seller_name
        from t_seller
        where seller_id=#{sellerId}
    </select>
    <!--  查找所有卖家信息  -->
    <select id="selectAllSeller" resultMap="BaseResultMap">
        select
            seller_id,
            seller_name
        from t_seller
    </select>
    <!-- 更新卖家信息 -->
    <update id="updateSeller" parameterType="com.pang.mall.entity.Seller">
        update t_seller
        <set>
            seller_name=#{sellerName}
        </set>
        where seller_id=#{sellerId}
    </update>
    <!--  删除卖家信息  -->
    <delete id="deleteSeller">
        delete from t_seller
        where seller_id=#{sellerId}
    </delete>
</mapper>