<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pang.mall.mapper.BuyerMapper">
    <resultMap id="BaseResultMap" type="com.pang.mall.entity.Buyer">
        <id column="buyer_id" property="buyerId" jdbcType="INTEGER"/>
        <result column="buyer_name" property="buyerName" jdbcType="VARCHAR"/>
    </resultMap>
    <insert id="addBuyer" parameterType="com.pang.mall.entity.Buyer">
        insert into t_buyer(buyer_name)
        values (#{buyerName})
    </insert>
    <select id="selectBuyerById" resultMap="BaseResultMap">
        select
        buyer_id, buyer_name
        from t_buyer
        where buyer_id=#{buyerId}
    </select>
    <select id="selectAllBuyer" resultMap="BaseResultMap">
        select
        buyer_id, buyer_name
        from t_buyer
    </select>
    <update id="updateBuyer" parameterType="com.pang.mall.entity.Buyer">
        update t_buyer
        <set>
            buyer_name=#{buyerName}
        </set>
        where buyer_id=#{buyerId}
    </update>
    <delete id="deleteBuyer">
        delete from t_buyer
        where buyer_id=#{buyerId}
    </delete>
</mapper>